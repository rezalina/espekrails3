                    <%= ' selected' if cf.id == params[:course_department_id].to_i %>> <%= cf.description.upcase %> </option>
                  <% end %>
        </select>
        <input type="button" value="Cari" onclick="document.forms[0].submit()">
      </td>
    </tr>
