      <td align="right"><b>Gelaran : </b></td>
      <td colspan=3>&nbsp; <%=nof{@profile.title.description.upcase}%> </td>
    </tr>
    <tr>
      <td width="20%" align="right"><b>Nama Penuh : </b></td>
      <td colspan=3>&nbsp; <%=nof{@profile.name} %></td>
    </tr>
