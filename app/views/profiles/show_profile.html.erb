      <td colspan=3>&nbsp; <%=nof{@profile.handicap.description.upcase}%> </td>
    </tr>
    <tr>
      <td align="right"><b>Vegetarian? :</b></td>
      <td >&nbsp;
          <% a = ["TIDAK","YA"] %>
        <%=nof{a[@profile.is_vegetarian]}%> </td>
