      <td colspan="4" align="CENTER" bgcolor="#999999"><b><font color="#FFFFFF">MAKLUMAT WARIS</font></b></td>
    </tr>
    <tr>
      <td colspan="4">&nbsp;</td>
    </tr>
    <tr>
      <td width="20%" align="right"><b>Nama : </b></td>
      <td colspan=3>&nbsp; <%= nof{@relative.name}%></td>
    </tr>
    <tr>
      <td width="20%" align="right"><b>Hubungan : </b></td>
      <td colspan=3>&nbsp; <%= nof{@relative.relationship.description.upcase}%></td>
    </tr>
    <tr>
      <td align="right" valign="top"><b>Alamat :</b></td>
      <td colspan=3>&nbsp; <%= nof{@relative.address1.upcase}%></td>
    </tr>
    <tr>
      <td align="right">&nbsp;</td>
      <td colspan=3>&nbsp; <%= nof{@relative.address2.upcase}%></td>
    </tr>
    <tr>
      <td align="right">&nbsp;</td>
      <td colspan=3>&nbsp; <%= nof{@relative.address3.upcase}%></td>
    </tr>
    <tr>
      <td align="right"><b>Negeri :</b></td>
      <td colspan=3>&nbsp; <%= nof{@relative.state.description.upcase}%></td>
    </tr>
    <tr>
      <td align="right"><b>No Telefon Rumah :</b></td>
      <td colspan=3>&nbsp; <%= nof{@relative.phone}%></td>
    </tr>
    <tr>
      <td align="right"><b>No Telefon Bimbit :</b></td>
      <td colspan=3>&nbsp; <%= nof{@relative.mobile} %> </td>
    </tr>
    <tr>
      <td colspan=4>&nbsp;</td>
    </tr>
    <tr bgcolor="000000">
      <td colspan="4" align="CENTER" bgcolor="#999999"><b><font color="#FFFFFF">MAKLUMAT PERKHIDMATAN</font></b></td>
    </tr>
    <tr>
    <td colspan="4" align="right">&nbsp;</td>
  </tr>
     <tr>
<% if nof{@employment.place}
				if @employment.place.place_type_id == 3
					grandparent = @employment.place
					parent = nil 
					child = nil
				elsif @employment.place.place_type_id == 1
					grandparent = @employment.place.parent
					parent = @employment.place
					child = nil
				else
					grandparent = @employment.place.parent.parent
					parent = @employment.place.parent
					child = @employment.place
				end
  end
  %>
      <td align="right"><b>Kementerian :</b></td>
      <td colspan="3">&nbsp; <%= nof{grandparent.name.upcase}%></td>
    </tr>
     <tr>
      <td align="right"><b>Jabatan :</b></td>
      <td colspan="3">&nbsp; <%= nof{parent.name.upcase}%></td>
    </tr>
    <tr>
      <td align="right"><b>Pejabat :</b></td>
      <td colspan="3">&nbsp; <%= nof{child.name.upcase} %></td>
    </tr>
    <tr>
    <td align="right"><b>Bahagian/Unit :</b></td>
      <td>&nbsp; <%= nof{@employment.unit.upcase} %> </td>
   </tr>
    <tr>
      <td align="right"><b>Gred/Jawatan:</b></td>
      <td colspan="3">&nbsp; <%= nof{@employment.job_profile.job_grade} %> &nbsp; <%= "(#{@employment.job_profile.job_name.upcase})" if @employment && @employment.job_profile%></td>
    </tr>
    <tr>
      <td align="right"><b>Gelaran Jawatan :</b></td>
      <td>&nbsp; <%= nof{@profile.designation.upcase} %> </td>
      <td align="right">&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td align="right"><b>E-Mel :</b></td>
      <td>&nbsp; <%= nof{@profile.email}%></td>
    </tr>
    <tr>
      <td colspan=4><hr width="80%" size="1" /></td>
    </tr>
    <tr>
      <td align="right"><b>Gelaran Ketua Pejabat :</b></td>
      <td colspan="3">&nbsp; <%= nof{@profile.hod} %></td>
    </tr>
    <tr>
      <td align="right"><b>Nama Pejabat :</b></td>
      <td colspan="3">&nbsp; <%= nof{@profile.opis} %></td>
    </tr>
    <tr>
      <td align="right"><b>Alamat :</b></td>
      <td colspan="3">&nbsp; <%= nof{@profile.address1} %></td>
    </tr>
    <tr>
      <td align="right"><b>(Tempat Bertugas)</b></td>
      <td colspan="3">&nbsp; <%= nof{@profile.address2} %></td>
    </tr>
    <tr>
      <td align="right">&nbsp;</td>
      <td colspan="3">&nbsp; <%= nof{@profile.address3} %></td>
    </tr>
    <tr>
      <td align="right"><b>Negeri :</b></td>
      <td colspan=3>&nbsp; <%= nof{@profile.state.description.upcase} %> </td>
    </tr>
    <tr>
      <td colspan=4>&nbsp;</td>
    </tr>
    <tr bgcolor="000000">
      <td colspan="4" align="CENTER" bgcolor="#999999"><b><font color="#FFFFFF">MAKLUMAT AKADEMIK</font></b></td>
    </tr>
    <tr>
      <td colspan="4">&nbsp;</td>
    </tr>
    <tr>
      <td valign=top align="center" colspan="5"><table border="1" width="90%" align="center">
          <tr>
            <th width="15%">KELAYAKAN</th>
            <th width="25%">PENGKHUSUSAN</th>
            <th width="25%">INSTITUSI/UNIVERSITI</th>
            <th width="15%">TAHUN</th>
          </tr>
          <%
	    i = 0
	    for qualification in @profile.qualifications
			i = i + 1
	  %>
          <tr align=center>
            <td align=left><%=i%>.<%= nof{qualification.cert_level.description.upcase}%></td>
            <td><%= nof{qualification.pengkhususan.upcase} || "&nbsp;"%></td>
            <td>&nbsp;<%= nof{qualification.institution.upcase}%></td>
            <td>&nbsp;<%= nof{qualification.year_end}%></td>
          </tr>
          <%end%>
      </table></td>
    </tr>
    <tr>
      <td colspan=4>&nbsp;</td>
    </tr>
  </table>
