      <td colspan=3>&nbsp;</td>
    </tr>
    <tr>
      <td align="right"><b>No Telefon Bimbit :</b></td>
      <td colspan=3>&nbsp; <%= nof{@profile.mobile}  %> </td>
    </tr>
    <tr>
      <td colspan=4>&nbsp;</td>
    </tr>
