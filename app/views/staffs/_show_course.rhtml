  <table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center"><%= link_to 'Kemaskini Tenaga Pengajar', :action => 'edit', :id => @staff %> | <%= link_to 'Tambah Kursus', :action => 'new_teaching_course', :id => @staff %></td>
    </tr>
  </table>
<br>
<table width="95%" border="0" align="center" cellpadding="3" cellspacing="1" bgcolor="#eeeeee">
    
    <tr>
      <td width="20%" align="right"><strong>Nama Tenaga Pengajar: </strong></td>
      <td><span class="blockintro">&nbsp; </span><%= @staff.profile.name.upcase %></td>
    </tr>
    <tr>
      <td align="right"><strong>No KPT #: </strong></td>
      <td>&nbsp; <%= @staff.profile.ic_number %></td>
    </tr>
    
    <tr>
      <td align="right"><strong><u>Kursus: </u> </strong></td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td align="CENTER" colspan="2"><table width="95%" border="0" align="center" cellpadding="3" cellspacing="1" bgcolor="#777777">
        <tr bgcolor="#999999" id="pisang" onclick="//servOC(20,'/course/show/3','#999999')">
          <td width="2%" valign="top" id="name20"><font color="#FFFFFF">&nbsp;</font></td>
          <td width="5%" align="center"><font color="#FFFFFF"><strong>Kod </strong></font></td>
          <td width="25%" align="center"><font color="#FFFFFF"><strong>Nama Kursus</strong></font></td>
          <td align="center"><font color="#FFFFFF"><strong>Bidang</strong></font></td>
          <td width="" align="center"><font color="#FFFFFF"><strong>Skim</strong></font></td>
          <td width="" align="center"><font color="#FFFFFF"><strong>Status</strong></font></td>
          <!--td align="center"><font color="#FFFFFF">Action</font></td-->
        </tr>
        <tr style="display: none;" id="ihtr20">
          <td colspan="6" bgcolor="#ececd9"><table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
                <tr>
                  <td width="10"></td>
                  <td style="border: 3px solid rgb(0, 51, 102);"><iframe id="ihif20" frameborder="0" width="100%"></iframe></td>
                </tr>
              </tbody>
          </table></td>
        </tr>
        <%
i = 0;
even = true;
#@courses = Course.find(:all, :conditions=>"course_field_id=3")
for course in @staff.courses
  i = i + 1
  bgclr = "#CCCCFF" if (even == true)
  bgclr = "#FFFFFF" if (even == false)
  even = !even

%>
        <tr bgcolor="<%=bgclr%>" onmouseover="this.style.background='#FFFFCC'" onmouseout="this.style.background='<%=bgclr%>'" 
        onmousedown="menuLayers.show_course('popmenu', '/staff', '<%=h @staff.id %>', '<%=course.id%>', '<%= course.name.upcase %>', event)"  onclick="//servOC(<%=course.id%>,'/course/show/<%=course.id%>','#999999')">
          <td id="name<%=h course.id %>"><%= i.to_s %>.</td>
          <td><%=h course.code %></td>
          <td><%=h course.name.upcase %></td>
          <td align="center"><%=h course.course_field.description.upcase %></td>
          <td align="center"><%=h course.course_scheme.description.upcase %></td>
          <td align="center"><%=h course.course_status.description.upcase %></td>
          <!--td align="center" nowrap><%= link_to 'Detail', :action => 'show', :id => course %> | <%= link_to 'Edit', :action => 'edit', :id => course %></td-->
        </tr>
        <tr style="display: none;" id="ihtr<%=h course.id %>">
          <td colspan="6" bgcolor="#ececd9"><table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
                <tr>
                  <td width="10"></td>
                  <td style="border: 0px solid rgb(0, 51, 102);"><iframe id="ihif<%=h course.id %>" frameborder="0" width="100%"></iframe></td>
                </tr>
              </tbody>
          </table></td>
        </tr>
        <% end %>
      </table></td>
    </tr>
  </table>
  <br>
