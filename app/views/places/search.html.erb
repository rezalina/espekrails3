<html>
<head>
  <title>Pejabat: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'style' %>
<script src="/javascripts/prototype.js" type="text/javascript"></script>
<script src="/javascripts/scriptaculous.js" type="text/javascript"></script>
</head>
<body>

<p style="color: green"><div align="center"><%= flash[:notice] %></div></p>
  <table border="0" cellspacing="0" cellpadding="0" width="95%" align="center">
    <tr> 
      <td width="86%" height="21" align="center" bgcolor="#999999"><b><font color="#FFFFFF">CARIAN KEMENTERIAN/JABATAN/PEJABAT</font></b></td>
    </tr>
  </table>
  <br>
   <table width="95%" border="0" align="center" cellpadding="3" cellspacing="1" bgcolor="#eeeeee">
    <tr>
      <td align="right" nowrap>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td align="right" valign="top"><strong>Nama Kementerian/Jabatan/Pejabat: </strong></td>
      <td>
      <form action="/places/search_by_name" method="post">
      <input name="name" type="text" value="" size="30" maxlength="150"/>
        <input type="submit" class="btn60"  value="Cari">
      </form>
     </td>
    </tr>
    <tr>
      <td align="right" valign="top"><strong>Kod Kementerian/Jabatan/Pejabat: </strong></td>
      <td>
      <form action="/places/search_by_code" method="post">
      <input name="code" type="text" value="" size="12" maxlength="12"/>
        <input type="submit" class="btn60"  value="Cari">
      </form>
     </td>
    </tr>
     <tr>
      <td align="right" valign="top"><strong>No Telefon#: </strong></td>
      <td>
      <form action="/places/search_by_phone" method="post">
      <input name="phone" type="text" value="" size="12" maxlength="12" />
        <input type="submit" class="btn60" value="Cari">
      </form>
      </td>
    </tr>
     <tr>
      <td align="right" valign="top"><strong>Negeri: </strong></td>
      <td>
      <form action="/places/search_by_state" method="post">
        <select name="state_id">
        <option value="">-Pilih Negeri-</option>
            <% @states.each do |state| %>
            <option value="<%= state.id %>"> <%= state.description %> </option>
            <% end %>
          </select>
          <input type="submit" class="btn60" value="Cari">
          </form>
     </td>
    </tr>   
    <tr>
      <td align="right" nowrap>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
 </table>
 
 
</body>
</html>
