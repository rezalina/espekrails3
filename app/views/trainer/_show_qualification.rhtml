  <table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center"><%= link_to 'Kemaskini Tenaga Pengajar', :action => 'edit', :id => @trainer %> | <%= link_to 'Tambah Kelayakan Baru', :action => 'new_qualification', :id => @trainer %></td>
    </tr>
  </table>
<br>
<table width="95%" border="0" align="center" cellpadding="3" cellspacing="1" bgcolor="#eeeeee">
    
    <tr>
      <td width="20%" align="right"><strong>Trainer's Name: </strong></td>
      <td><span class="blockintro">&nbsp; </span><%= @trainer.profile.name.upcase %></td>
    </tr>
    <tr>
      <td align="right"><strong>NRIC #: </strong></td>
      <td>&nbsp; <%= @trainer.profile.ic_number %></td>
    </tr>
    
    <tr>
      <td align="right"><strong><u>Kelayakan:</u> </strong></td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td align="CENTER" colspan="2"><table width="95%" border="0" align="center" cellpadding="3" cellspacing="1" bgcolor="#777777">
        <tr bgcolor="#999999" id="pisang">
          <td width="2%" valign="top"><font color="#FFFFFF"></font></td>
          <td width="30%" align="center"><font color="#FFFFFF"><strong> Kategori </strong></font></td>
          <td width="20%" align="center"><font color="#FFFFFF"><strong> Institusi </strong></font></td>
          <td width="20%" align="center"><font color="#FFFFFF"><strong> Tahun Akhir </strong></font></td>
        </tr>
        <tr style="display: none;" id="ihtr20">
          <td colspan="7" bgcolor="#ececd9"><table border="1" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
                <tr>
                  <td width="10"></td>
                  <td style="border: 3px solid rgb(0, 51, 102);"><iframe id="ihif20" frameborder="0" width="100%"></iframe></td>
                </tr>
              </tbody>
          </table></td>
        </tr>
        <%	
	i = 0
	even = true
	for qualification in @trainer.profile.qualifications
		i = i + 1
		bgclr = "#CCCCFF" if (even == true)
		bgclr = "#FFFFFF" if (even == false)
		even = !even
		%>
        <tr bgcolor="<%=bgclr%>" onmouseover="this.style.background='#FFFFCC'" onmouseout="this.style.background='<%=bgclr%>'" 
        onmousedown="menuLayers.show_qualification('popmenu', '/trainer', '<%=h @trainer.id %>', '<%=qualification.id%>', '<%= qualification.cert_level.description.upcase %>', event)" >
          <td><%= i.to_s %>.</td>
          <td><%=h qualification.cert_level.description.upcase %></td>
          <td align="center"><%=h qualification.institution.upcase %></td>
          <td align="center"><%=h qualification.year_end %></td>
        </tr>
        <%end %>
      </table></td>
    </tr>
  </table>
  <br>
