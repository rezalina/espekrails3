  </tr>
</table>
<br />
<!--section B-->
<table style="width: 800px" border="1" align="center" cellpadding="3" cellspacing="1" bgcolor="#eeeeee">
  <tr>
    <td colspan="4" bgcolor="#999999"><b>B.PENILAIAN PENCERAMAH </b></td>
  </tr>
  <tr>
    <td width="50%">&nbsp;</td>
    <td width="20%">&nbsp;</td>
    <td align="center">Ulasan</td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td colspan="4" align="RIGHT">
      <%= link_to "tambah topik", evaluation_topic_new_path(@evaluation.id, :section=>2, :subsection=>2), :style => "color:blue" %>
      <!-- <a style="color:blue" href="/evaluations/topic_new/<%#=@evaluation.id%>?section=2&subsection=2">tambah topik </a> -->
    </td>
  </tr>

  <%
  for topic in @topics

  %>
    <tr>
      <td colspan="3" bgcolor="#dddddd">

        Topik: <%=topic.title%><br />
        Penceramah: <%=topic.trainer.profile.name%><br />
        Tarikh & Masa Mula: <%= topic.shown_at %>
      </td>
      <td nowrap>
        <a style="color:blue" href="javascript: goDel('/evaluations/<%=topic.id%>/topic_destroy')">padam</a>
        <!--|
                    <a style="color:blue" href="/evaluations/trainer_ranking_new/<%#=eval_quest.evaluation_trainer_ranking.topic_id%>">tambah soalan</a> -->		  </td>
    </tr>

    <% for ranking in topic.evaluation_trainer_rankings	%>
      <tr>
        <td width="50%">
          <table><tr><td>&nbsp;</td><td><%=ranking.evaluation_question.questiontext%></td></tr></table>		  </td>
        <td width="20%" nowrap>
          <%- total_max_ranking = (ranking.max_ranking < 6 ? (6 - ranking.max_ranking + ranking.max_ranking) : ranking.max_ranking) %>
          <% total_max_ranking.times do |i|%>
            <input name="radiobutton" type="radio" value="<%= i+1 %>" style="height: 11px"><%=i+1%>
          <% end %>
        </td>
        <td>
          <input name="textfield23" type="text" size="40"></td>
        <td><a style="color:blue;text-decoration:underlined" href="/evaluations/ev_quest_sub_edit/<%=ranking.evaluation_question_id%>">edit</a>|<a style="color:blue;text-decoration:underlined" href="javascript: goDel('/evaluations/ev_quest_sub_destroy/<%=ranking.evaluation_question_id%>')">padam</a></td>
      </tr>
    <%
    end # for ranking
  end #for eval_quest
  %>
</table>
<br />
<!--section C-->
<table style="width: 800px" border="1" align="center" cellpadding="3" cellspacing="1" bgcolor="#eeeeee">
  <tr>
    <td colspan="4" bgcolor="#999999"><b>C.PENILAIAN KURSUS </b></td>
  </tr>
  <!--tr>
    <td colspan="4" bgcolor="#dddddd" align="center">SKALA 1:LEMAH 2:KURANG MEMUASKAN 3:MEMUASKAN 4:BAIK </td>
  </tr-->

  <tr>
    <td width="50%">&nbsp;</td>
    <td width="20%">&nbsp;</td>
    <td align="center">Ulasan</td>
    <td>&nbsp;</td>
  </tr>

  <% for subc in EvaluationSection.find(3).evaluation_subsections%>
    <tr>
      <td colspan="2"><b><%=subc.description%></b></td>
      <td colspan="2" align="right">
        <a style="color:blue" href="/evaluations/truefalse_new/<%=@evaluation.id%>?section=3&subsection=<%=subc.id%>">tambah soalan(ya/tidak)</a>
        |
        <a style="color:blue" href="/evaluations/ranking_new/<%=@evaluation.id%>?section=3&subsection=<%=subc.id%>">tambah soalan</a>
      </td>
    </tr>

    <%
    if subc.evaluation_questions.size > 0
      @evaluation_questions = EvaluationQuestion.find(:all,
        :conditions=>"evaluation_id=#{@evaluation.id} AND evaluation_subsection_id=#{subc.id}")
      for eq in @evaluation_questions
      %>
        <tr>
          <td>
            <table>
              <tr>
                <td>&nbsp;</td>
                <td><%=eq.questiontext%></td>
              </tr>
            </table>
          </td>
          <td nowrap>
            <%		if eq.evaluation_type_id == 5%>
              <%			deletion_url = "ev_quest_section_c_sub_destroy"%>
              <%			editing_url = "ev_quest_section_c_sub_edit"%>
              <%-     if eq.evaluation_ranking %>
                <%-         total_max_ranking = (eq.evaluation_ranking.max_ranking < 6 ? (6 - eq.evaluation_ranking.max_ranking + eq.evaluation_ranking.max_ranking) : eq.evaluation_ranking.max_ranking) %>
                <% 			total_max_ranking.times do |i|%>
                  <input name="radiobutton" type="radio" value="<%= i+1 %>" style="height: 11px"><%=i+1%>
                <% 			end
              end
            end
          %>

            <%		if eq.evaluation_type_id == 6%>
              <%			deletion_url = "ev_quest_section_c_truefalse_sub_destroy"%>
              <%			editing_url = "ev_quest_section_c_truefalse_sub_edit"%>
              <input name="radiobutton" type="radio" value="0" style="height: 11px">Ya
              <input name="radiobutton" type="radio" value="0" style="height: 11px">Tidak
            <%		end
          %>
          </td>
          <td><input name="textfield2" type="text" size="40"></td>
          <td>
            <a style="color:blue;text-decoration:underlined" href="/evaluations/<%=editing_url%>/<%=eq.id%>">edit</a>|<a style="color:blue;text-decoration:underlined" href="javascript: goDel('/evaluations/<%=deletion_url%>/<%=eq.id%>')">padam</a>

          </td>
        </tr>
      <%
      end
    end
  end
%>
</table>
<br />
<!--section D-->
<table style="width: 800px" border="1" align="center" cellpadding="3" cellspacing="1" bgcolor="#eeeeee">
  <tr>
    <td colspan="4" bgcolor="#999999"><b>D.PENILAIAN KEMUDAHAN </b></td>
  </tr>

  <tr>
    <td width="50%">&nbsp;</td>
    <td width="20%">&nbsp;</td>
