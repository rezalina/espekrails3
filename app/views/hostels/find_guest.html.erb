<script>

function acceptSelected(df) {
  var sum_checked = 0

  for (i=1; i<df.elements.length; i++ )
  {
     if (df.elements[i].type == "checkbox")
     {
       if (df.elements[i].checked == true) {
         sum_checked++
       }
     } 
  }
  if (sum_checked > 0) {
    df.action = "/course_applications/accept_selected"
    df.submit()
  }
  else {
    alert("Sila Pilih Pemohon")
  }
}

</script>
    
