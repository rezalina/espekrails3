<div align="center">
<%= error_messages_for 'hostel_facility' %>
</div>

<!--[form:hostel_facility]-->
  <table width="90%" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center"> <a href="/hostel_facilities/list"><u>Kembali</u></a> ke Senarai Sumber Kemudahan Domestik </td>
    </tr>
    
  </table>
  <br>
  <table width="95%" border="0" align="center" cellpadding="3" cellspacing="1" bgcolor="#eeeeee">
    <tr>
      <td width=40% align="right"><strong>Kategori:</strong></td>
      <td><span class="blockintro">&nbsp;
      <select name="hostel_facility[hostel_facility_type_id]">
       <% @hostel_facility_types.each do |hostel_facility_type| %>
        <option value="<%= hostel_facility_type.id %>"
        <%= ' selected' if hostel_facility_type.id == @hostel_facility.hostel_facility_type_id %>> <%= hostel_facility_type.description %> </option>
        <% end %>  
      </select>
      </span>
      </td>
    </tr>
    <tr>
      <td align="right"><strong>Kod:</strong></td>
      <td><span class="blockintro">&nbsp;
      <%= text_field 'hostel_facility', 'code', :maxlength=>25, :size=>20  %>      </span></td>
    </tr>
    
    <tr>
      <td align="right"><strong>Nama:</strong></td>
      <td><span class="blockintro">&nbsp; 
      <%= text_field 'hostel_facility', 'description', :maxlength=>100, :size=>30 %></span></td>
    </tr>
    
    <!--tr>
      <td align="right"><strong>Kapasiti:</strong></td>
      <td><span class="blockintro">&nbsp; 
      <%= text_field 'hostel_facility', 'capacity', :size=>20 %></span></td>
    </tr!-->
        
    <tr>
      <td align="right"><strong>Harga:</strong></td>
      <td><span class="blockintro">&nbsp;RM
      <%= text_field 'hostel_facility', 'price', :maxlength=>11, :size=>10  %>      </span></td>
    </tr>
    
    <tr>
      <td width=40% align="right"><strong>Status:</strong></td>
      <td><span class="blockintro">&nbsp;
      <select name="hostel_facility[facility_status_id]">
       <% @facility_statuses.each do |facility_status| %>
        <option value="<%= facility_status.id %>"
        <%= ' selected' if facility_status.id == @hostel_facility.facility_status_id %>> <%= facility_status.description %> </option>
        <% end %>  
      </select>
      </span>
      </td>
    </tr>
    
    </table>
  
