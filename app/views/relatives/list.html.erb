<h1>Listing relatives</h1>

<table>
  <tr>
  <% for column in Relative.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for relative in @relatives %>
  <tr>
  <% for column in Relative.content_columns %>
    <td><%=h relative.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => relative %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => relative %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => relative }, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @relative_pages.current.previous } if @relative_pages.current.previous %>
<%= link_to 'Next page', { :page => @relative_pages.current.next } if @relative_pages.current.next %> 

<br />

<%= link_to 'New relative', :action => 'new' %>
